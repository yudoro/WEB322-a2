<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <!-- nav bar -->
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto text-center">
      <h1 class="text-5xl font-bold mx-auto pb-2"><%= project.title %></h1>
    </div>
    <!-- hero -->
    <div class="container mx-auto mb-6">
      <div class="hero bg-base-200 min-h-80 max-h-170 w-2/3 mx-auto">
        <div class="hero-content text-center flex-col gap-0 pb-1">
          <div class="max-w-md"></div>

          <img
            src="<%= project.feature_img_url %>"
            class="w-1/2-screen h-full w-full"
          />
          <p class="py-4 font-bold">
            Below, you will find detailed information about the project:
          </p>
        </div>
      </div>
    </div>

    <!-- info -->
    <div class="container w-1/2 mx-auto">
      <p class="py-6"><%= project.intro_short %></p>
      <p class="py-"><%= project.impact %></p>
      <div class="flex justify-end pt-5">
      <a href="<%= project.original_source_url %>" class="btn btn-primary"
        >Learn More</a
      >
      </div>
      <p id="quote" class="italic text-center mt-2"></p>
      <p id="author" class="italic text-center"></p>
      <div class="flex justify-center pt-5">
        <a href="#" class="btn" onclick="history.back(); return false;"
          >Return to Previous</a
        >
      </div>
    </div>
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      let request = new Request("https://dummyjson.com/quotes/random", {
        method: "GET",
      });

      fetch(request)
        .then((response) => response.json())
        .then((response) => {
          console.log(response);
          document.getElementById("quote").innerHTML = response.quote;
          document.getElementById("author").innerHTML = "- " + response.author;
        })
        .then((json) => {
          console.log(json);
        });
    });
  </script>
</html>
